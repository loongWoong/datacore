<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dataplatform.report.mapper.ReportParameterMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dataplatform.report.entity.ReportParameter">
        <id column="id" property="id"/>
        <result column="report_id" property="reportId"/>
        <result column="param_name" property="paramName"/>
        <result column="param_label" property="paramLabel"/>
        <result column="param_type" property="paramType"/>
        <result column="is_required" property="isRequired"/>
        <result column="default_value" property="defaultValue"/>
        <result column="param_options" property="paramOptions"/>
        <result column="param_order" property="paramOrder"/>
        <result column="created_time" property="createdTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, report_id, param_name, param_label, param_type, is_required, default_value, param_options, param_order, created_time
    </sql>

    <!-- 根据报表ID查询参数列表 -->
    <select id="selectByReportId" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM report_parameter
        WHERE report_id = #{reportId}
        ORDER BY param_order ASC
    </select>

    <!-- 根据报表ID删除参数 -->
    <delete id="deleteByReportId" parameterType="long">
        DELETE FROM report_parameter
        WHERE report_id = #{reportId}
    </delete>

</mapper>