<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dataplatform.report.mapper.ReportSubscriptionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dataplatform.report.entity.ReportSubscription">
        <id column="id" property="id"/>
        <result column="report_id" property="reportId"/>
        <result column="subscriber" property="subscriber"/>
        <result column="subscription_type" property="subscriptionType"/>
        <result column="subscription_config" property="subscriptionConfig"/>
        <result column="is_active" property="isActive"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, report_id, subscriber, subscription_type, subscription_config, is_active, created_time, updated_time
    </sql>

    <!-- 根据报表ID查询订阅列表 -->
    <select id="selectByReportId" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM report_subscription
        WHERE report_id = #{reportId}
    </select>

    <!-- 根据报表ID查询激活的订阅列表 -->
    <select id="selectActiveSubscriptions" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM report_subscription
        WHERE report_id = #{reportId} AND is_active = 1
    </select>

</mapper>