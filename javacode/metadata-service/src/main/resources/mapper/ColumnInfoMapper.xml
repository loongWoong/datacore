<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dataplatform.metadata.mapper.ColumnInfoMapper">

    <select id="selectByTableId" resultType="com.dataplatform.metadata.entity.ColumnInfo">
        SELECT * FROM metadata_column_info WHERE table_id = #{tableId}
        ORDER BY column_order ASC
    </select>

</mapper>