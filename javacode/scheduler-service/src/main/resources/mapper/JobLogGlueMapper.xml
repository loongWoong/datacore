<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dataplatform.scheduler.mapper.JobLogGlueMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dataplatform.scheduler.entity.JobLogGlue">
        <id column="id" property="id"/>
        <result column="job_id" property="jobId"/>
        <result column="glue_type" property="glueType"/>
        <result column="glue_source" property="glueSource"/>
        <result column="glue_remark" property="glueRemark"/>
        <result column="add_time" property="addTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, job_id, glue_type, glue_source, glue_remark, add_time, update_time
    </sql>

    <!-- 根据任务ID查询GLUE日志 -->
    <select id="selectByJobId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM xxl_job_logglue
        WHERE job_id = #{jobId}
        ORDER BY update_time DESC
    </select>

    <!-- 根据任务ID删除GLUE日志 -->
    <delete id="deleteByJobId">
        DELETE FROM xxl_job_logglue WHERE job_id = #{jobId}
    </delete>

</mapper>