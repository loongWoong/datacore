<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dataplatform.asset.mapper.AssetLifecycleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dataplatform.asset.entity.AssetLifecycle">
        <id column="id" property="id"/>
        <result column="asset_id" property="assetId"/>
        <result column="lifecycle_event" property="lifecycleEvent"/>
        <result column="event_description" property="eventDescription"/>
        <result column="operator" property="operator"/>
        <result column="operated_time" property="operatedTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, asset_id, lifecycle_event, event_description, operator, operated_time
    </sql>

    <!-- 根据资产ID查询生命周期记录 -->
    <select id="selectByAssetId" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM asset_lifecycle
        WHERE asset_id = #{assetId}
        ORDER BY operated_time DESC
    </select>

    <!-- 插入生命周期记录 -->
    <insert id="insert" parameterType="com.dataplatform.asset.entity.AssetLifecycle">
        INSERT INTO asset_lifecycle(asset_id, lifecycle_event, event_description, operator, operated_time)
        VALUES (#{assetId}, #{lifecycleEvent}, #{eventDescription}, #{operator}, #{operatedTime})
    </insert>

</mapper>