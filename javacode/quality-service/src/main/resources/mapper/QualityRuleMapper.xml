<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dataplatform.quality.mapper.QualityRuleMapper">

    <select id="selectByRuleCode" resultType="com.dataplatform.quality.entity.QualityRule">
        SELECT * FROM quality_rule WHERE rule_code = #{ruleCode}
    </select>

    <select id="selectByCondition" resultType="com.dataplatform.quality.entity.QualityRule">
        SELECT * FROM quality_rule
        <where>
            <if test="query.ruleType != null and query.ruleType != ''">
                AND rule_type = #{query.ruleType}
            </if>
            <if test="query.tableName != null and query.tableName != ''">
                AND table_name = #{query.tableName}
            </if>
        </where>
        ORDER BY created_time DESC
    </select>

    <select id="selectBatchIds" resultType="com.dataplatform.quality.entity.QualityRule">
        SELECT * FROM quality_rule WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>